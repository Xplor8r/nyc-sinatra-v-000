<h1><%=@figure.name %></h1>

  <h2>Titles:</h2>
  <% @figure.titles.each do |title| %>
    <p><%= title.name %></p>
  <% end %>

  <h2>Landmarks:</h2>
  <% @figure.landmarks.each do |landmark| %>
    <p><%= landmark.name %></p>
  <% end %>
  <a class="button" href="/landmarks/<%= @landmark.id %>/edit">Edit Figure</a>
  <a class="button" href="/landmarks">Figures</a>
